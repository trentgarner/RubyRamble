<h1>Edit Post</h1>

<% if @blog_post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@blog_post.errors.count, "error") %> prevented this post from being saved:</h2>
    <ul>
      <% @blog_post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'form', blog_post: @blog_post %>

<%= button_to 'Delete Post', blog_post_path(@blog_post), method: :delete, 
          data: { turbo_confirm: "Are you sure you want to delete this post?" }, 
          class: "btn btn-danger" %>
