<%= form_with(model: @blog_post, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit @blog_post.persisted? ? "Update Post" : "Create Post", class: "btn btn-primary" %>
  </div>
<% end %>